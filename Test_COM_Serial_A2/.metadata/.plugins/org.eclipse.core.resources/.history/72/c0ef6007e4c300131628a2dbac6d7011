#include <dual_drive.h>
#include <stdio.h>

#define MODE_CHANGE 1
#define MODE_NO_CHANGE 0
#define HIGH
#define LOW

#pragma unsafe arrays
void dual_drive(bldc_bridge_t &bridge, chanend ctrl)
{
	dual_drive_mode_t mode=DRIVE_STOP;
	unsigned inMode=DRIVE_STOP;
	unsigned speed;
	unsigned time;
	unsigned d;

	unsigned edgetime;
	unsigned pwm_pin=0;



	printf("dual_drive...\n");

	//#####################
	// Clock configuration
	//#####################
	configure_clock_rate(bridge.clk,bridge.clk_dividend,bridge.clk_divisor);
	for (d = 0; d < 4; ++d) {
	configure_out_port(bridge.pins[d],bridge.clk,0);
	}
	start_clock(bridge.clk);


	while(1)
	{
		//##########################
		// Getting new information
		//##########################
		select
		{
			case ctrl :> inMode:
			{
				switch(inMode)
				{
				case DRIVE_BACKWARD:
				case DRIVE_FORWARD:
					ctrl:>speed;
					break;
				case DRIVE_STOP:
					break;
				}
			}
			break;
			default:
				break;
		}

		//##########################
		// Check if period in range
		//##########################

		if(speed>bridge.pwm_period)
		{
			speed=bridge.pwm_period;
		}


		//#######################
		// Doing a mode change
		//#######################
		if(inMode != mode)
		{

			unsigned pin;
			printf("Mode Change!!\n");

			//##########################
			// Init pins and port times
			//##########################

				bridge.pins[0]<:0;
				bridge.pins[1]<:0;
				bridge.pins[2]<:0;
				bridge.pins[3]<:0;



			//init time
			bridge.pins[0] <: 0 @time;

			//###################
			// Init static pins
			//###################
			switch(inMode)
			{
			case DRIVE_FORWARD:
			case DRIVE_BACKWARD:

				if(inMode == DRIVE_FORWARD)
				{
					printf("Forward...\n");
					bridge.pins[3]<:1;
					pwm_pin=0;
				}
				else //Backward
				{
					printf("Backward...\n");
					bridge.pins[2]<:1;
					pwm_pin=1;
				}

				break;

			default:
				break;
			}

			mode=inMode;
		}

		//################
		// Motor Control
		//################
		switch(mode)
		{
			case DRIVE_FORWARD:
			case DRIVE_BACKWARD:

				time += bridge.pwm_period;

				//RISE
				if(speed != 0) bridge.pins[pwm_pin] @time<:1;

				edgetime = time + speed;

				//FALL
				if(bridge.pwm_period != speed)
					bridge.pins[pwm_pin] @ edgetime <:0;

				break;

			case DRIVE_STOP:
				break;
		}

	}
}
